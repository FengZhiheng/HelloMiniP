.user-result {

  width:100%;
  margin-top:100rpx;      
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;

  border: 3rpx solid #ddd;
  border-radius: 14rpx;
  padding: 10rpx;

}


.btn1 {
  width:80%;
  margin-top:30rpx;
  background-color: rgb(106, 0, 95);
  color: white;
  border-radius: 98rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.buttonGroup {
  position: fixed;
  width: 750rpx;
  height: 320rpx;
  bottom: 0;
}

.buttonGroup button{
  width:90%;
  border-radius: 14rpx 15rpx;
  background-color: #1aad16;
  margin-bottom:15rpx;
  color: #fff;
}

